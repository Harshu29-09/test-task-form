{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",  // Add this line to set the base directory for module resolution
    "paths": {
      "@chakra-ui/react": ["./node_modules/@chakra-ui/react"],
      "chakra-react-select": ["./node_modules/chakra-react-select"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/App.tsx"],
  "exclude": ["node_modules"]
}
